<Window x:Class="WSCADCodeChallenge.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10">
            <Button Content="Import File" Click="ImportFile_Click" Margin="5" />
            <Button Content="Generate" Click="Generate_Click" Margin="5" Name="GenerateButton" IsEnabled="False" />
        </StackPanel>
        <TextBlock Name="StatusMessage" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0" FontSize="14" />
        <Canvas Name="GraphicCanvas" Background="White" Margin="10,100,10,10" />
    </Grid>
</Window>